{
  "name": "engine",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/feature/engine/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/feature/engine",
        "tsConfig": "libs/feature/engine/tsconfig.lib.json",
        "packageJson": "libs/feature/engine/package.json",
        "main": "libs/feature/engine/src/index.ts",
        "assets": [
          "libs/feature/engine/*.md",
          {
            "glob": "**/*.json",
            "input": "./libs/feature/engine/src/i18n/getText/",
            "output": "i18n"
          },
          {
            "glob": "**/*.sql",
            "input": "./libs/feature/engine/src/migrations/",
            "output": "migrations"
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/feature/engine/jest.config.ts"
      }
    },
    "skip-semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "${PROJECT_NAME}:build",
        "outputPath": "dist/libs/feature/engine"
      }
    }
  }
}
